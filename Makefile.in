@SET_MAKE@
DVIPDFMX=@DVIPDFMX@
EMACS=@EMACS@
EMACSINFO=$(EMACS) -batch -q -no-site-file -l infohack.el -f batch-makeinfo
INFO_DEPS=gnus-ja.info message-ja.info emacs-mime-ja.info epa-ja.info\
 sasl-ja.info sieve-ja.info gnus-coding-ja.info auth-ja.info
INSTALL=@INSTALL@
INSTALL_DATA=@INSTALL_DATA@
INSTALL_INFO=install-info
PBIBTEX=@PBIBTEX@
PDVIPS=@PDVIPS@
PTEX=@PTEX@
SHELL=/bin/sh
TEXI2DVI=@TEXI2DVI@
prefix=@prefix@
datarootdir=@datarootdir@
infodir=@infodir@
GZIP_PROG = @GZIP_PROG@
COMPRESS_INSTALL = @COMPRESS_INSTALL@

.SUFFIXES: .pdf .ps .texi

all: $(INFO_DEPS)

# please modify this for all the web manual targets
webhack: clean
	$(MAKE) pdf MAKEINFO_OPTS="-DWEBHACKDEVEL $(MAKEINFO_OPTS)"

.texi.info:
	@texi=$<; rm -f $@ $@-[0-9]; $(EMACSINFO) $$texi t

install: all
	$(SHELL) ./mkinstalldirs "$(infodir)"
	@for file in $(INFO_DEPS); do\
	  rm -f "$(infodir)"/$$file{,-[0-9],.info,.info-[0-9]}; \
	  rm -f "$(infodir)"/$$file{,-[0-9],.info,.info-[0-9]}.gz; \
	  for ifile in `echo $$file $$file-[0-9]`; do\
	    if test -f $$ifile; then\
	      echo "$(INSTALL_DATA) $$ifile \"$(infodir)/$$ifile\"";\
	      $(INSTALL_DATA) $$ifile "$(infodir)/$$ifile";\
	      if test $(COMPRESS_INSTALL) = yes -a -n "$(GZIP_PROG)"; then\
		$(GZIP_PROG) -9n "$(infodir)/$$ifile";\
	      fi;\
	    else : ; fi;\
	  done;\
	done
	@if $(SHELL) -c $(INSTALL_INFO)' --version| sed 1q\
		| fgrep -s -v -i debian'>/dev/null 2>&1; then\
	  for file in $(INFO_DEPS); do\
	    if test -f "$(infodir)/$$file" -o -f "$(infodir)/$$file.gz"; then\
	      echo "$(INSTALL_INFO) --info-dir=\"$(infodir)\" \"$(infodir)/$$file\"";\
	      $(INSTALL_INFO) --info-dir="$(infodir)" "$(infodir)/$$file" || :;\
	    else : ; fi\
	  done;\
	else : ; fi

dvi: gnus-ja.dvi message-ja.dvi emacs-mime-ja.dvi epa-ja.dvi\
 sasl-ja.dvi sieve-ja.dvi gnus-coding-ja.dvi auth-ja.dvi

.texi.dvi:
	sed -e '/@iflatex/,/@end iflatex/d' $< > gnustmp.texi
	env TEX=$(PTEX) BIBTEX=$(PBIBTEX) $(TEXI2DVI) -o $@ gnustmp.texi
	rm -f gnustmp.*

pdf: gnus-ja.pdf message-ja.pdf emacs-mime-ja.pdf epa-ja.pdf\
 sasl-ja.pdf sieve-ja.pdf gnus-coding-ja.pdf auth-ja.pdf

.texi.pdf:
	i=`basename $@ .pdf`; $(MAKE) $$i.dvi; $(DVIPDFMX) $$i

ps: gnus-ja.ps message-ja.ps emacs-mime-ja.ps epa-ja.ps\
 sasl-ja.ps sieve-ja.ps gnus-coding-ja.ps auth-ja.ps

.texi.ps:
	i=`basename $@ .ps`; $(MAKE) $$i.dvi; $(PDVIPS) $$i

clean:
	rm -f *.dvi *.info *.info-[0-9] *.orig *.pdf *.ps *~\
 gnustmp.* missfont.log

distclean: clean
	rm -fr autom4te.cache
	rm -f Makefile config.*
